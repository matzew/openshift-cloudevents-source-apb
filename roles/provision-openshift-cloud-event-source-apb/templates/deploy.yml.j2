apiVersion: v1
kind: ServiceAccount
metadata:
  name: k8s-event-listener
  namespace: {{ namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: k8s-event-listener
rules:
- apiGroups: [""]
  resources: ["events"]
  verbs: ["get", "watch", "list"]
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: k8s-event-listener
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: k8s-event-listener
subjects:
- kind: ServiceAccount
  name: k8s-event-listener
  namespace: {{ namespace }}
---
apiVersion: v1
data:
  config.json: |-
    {
      "sink": "http",
      "httpSinkUrl": "http://k8s-cloud-event-source/post/heptio",
      "httpSinkBufferSize": 1500,
      "httpSinkDiscardMessages": true
    }
kind: ConfigMap
metadata:
  name: k8s-event-listener-cm
  namespace: {{ namespace }}
---
apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: k8s-event-listener
  namespace: {{ namespace }}
  labels:
    app: openshift-monitor
spec:
  replicas: 1
  selector:
    matchLabels:
      app: openshift-monitor
  template:
    metadata:
      labels:
        app: openshift-monitor
        tier: control-plane-addons
    spec:
      containers:
      - name: k8s-event-listener
        image: gcr.io/heptio-images/eventrouter:latest
        imagePullPolicy: IfNotPresent
        volumeMounts:
        - name: config-volume
          mountPath: /etc/eventrouter
      serviceAccount: k8s-event-listener
      volumes:
      - name: config-volume
        configMap:
          name: k8s-event-listener-cm
